<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="2dp"
    android:orientation="vertical">


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/padding_size_layout_large"
        android:paddingLeft="@dimen/padding_size_layout_large"
        android:paddingRight="@dimen/padding_size_layout_large"
        android:gravity="top">

        <com.github.siyamed.shapeimageview.CircularImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/imageView6"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/margin_size_layout_medium"
            android:background="@drawable/ic_launcher"
            android:gravity="center" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Aung Epicband"
            android:id="@+id/textView"
            android:textColor="#000000"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="@dimen/margin_size_layout_medium"
            android:textSize="20dp" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="25dp"
            android:layout_marginTop="1dp"
            android:paddingLeft="@dimen/padding_size_layout_medium"
            android:paddingRight="@dimen/padding_size_layout_medium"
            android:gravity="right">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="View:"
                android:textColor="#000000"
                android:id="@+id/view"
                android:textSize="15dp"
                android:layout_weight="5" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:background="#F3F3F3"
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:paddingLeft="@dimen/padding_size_layout_medium"
        android:paddingRight="@dimen/padding_size_layout_medium"
        android:paddingBottom="@dimen/padding_size_layout_medium"
        android:layout_marginRight="@dimen/margin_size_layout_medium"
        android:layout_height="fill_parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Member"
            android:layout_marginRight="@dimen/margin_size_layout_medium"
            android:textColor="#000000"
            android:id="@+id/messng"
            android:textSize="15dp" />
        <Button
            android:text="+ Add Member"
            android:background="#ffffff"
            android:textColor="#000000"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />


    </LinearLayout>





</LinearLayout>
