<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="br.liveo.navigationviewpagerliveo" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.VIBRATE" />

    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STO"/>

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/myTheme" >

        <activity
            android:name=".NavigationMain"
            android:label="@string/app_name"
            android:theme="@style/nLiveoDrawer" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="br.liveo.activity.ProfileDetail" />
        <activity android:name="br.liveo.activity.ActivityAddFriends" />
        <activity android:name="br.liveo.activity.ActivityComment" />
        <activity android:name="br.liveo.activity.ActivityCreateGroup" />
        <activity android:name="br.liveo.activity.ActivityVideoPlaying" />
        <activity android:name="br.liveo.activity.ActivityWritePost" />
        <activity android:name="br.liveo.activity.MainProfileFriends" />
        <activity android:name="br.liveo.activity.ActivityVideos" />
        <activity android:name="br.liveo.activity.ActivityLiveHistory" />
        <activity android:name="br.liveo.activity.ActivityLiveChannels" />
        <activity android:name="br.liveo.activity.ActivityLivePlaying" />

        <intent-filter>
            <action android:name="android.intent.action.CHOOSER" />

            <category android:name="android.intent.category.DEFAULT" />

            <data android:mimeType="image/*" />
        </intent-filter>
        <intent-filter>
            <action android:name="android.intent.action.VIEW" />

            <category android:name="android.intent.category.DEFAULT" />

            <data android:mimeType="image/*" />
        </intent-filter>

        <activity
            android:name="br.liveo.activity.ActivityTypePhoto"
            android:label="@string/title_activity_activity_type_photo" >
        </activity>

        <activity
            android:name="io.vov.vitamio.activity.InitActivity"
            android:configChanges="orientation|screenSize|smallestScreenSize|keyboard|keyboardHidden|navigation"
            android:launchMode="singleTop"
            android:theme="@android:style/Theme.NoTitleBar"
            android:windowSoftInputMode="stateAlwaysHidden" />
    </application>

</manifest>
